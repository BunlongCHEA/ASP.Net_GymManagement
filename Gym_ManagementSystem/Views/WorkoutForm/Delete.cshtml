@model Gym_ManagementSystem.Models.WorkoutViewModel

@{
    ViewData["Title"] = "Delete Workout";
}

<h2>Delete Workout</h2>

<h3>Are you sure you want to delete this workout?</h3>

<div>
    <hr />
    <table class="table">
        <thead>
            <th>Class Name</th>
            <th>Trainer Contact</th>
            <th>Member Email</th>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Class.ClassName</td>
                <td>@Model.Trainer.TrainerName</td>
                <td>@Model.Member.MemberName</td>
            </tr>
        </tbody>
    </table>

    <form asp-action="DeleteConfirm" style="margin-top:10px">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
