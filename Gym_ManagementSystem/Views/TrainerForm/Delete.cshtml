@model Gym_ManagementSystem.Models.TrainerViewModel;

@{
    ViewData["Title"] = "Delete Trainer";
}

<h2>Delete Trainer</h2>

<div>
    <h3>Are you sure you want to delete this Trainer?</h3>
    <div>
        <hr />
        <h4>@Model.TrainerName</h4>
        <table class="table">
            <thead>
            <th>Trainer Name</th>
            <th>Trainer Contact</th>
            <th>Trainer Email</th>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.TrainerName</td>
                    <td>@Model.TrainerContact</td>
                    <td>@Model.TrainerEmail</td>
                </tr>
            </tbody>
        </table>

        <form asp-action="DeleteConfirm" style="margin-top:10px">
            <input type="hidden" asp-for="Id">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>