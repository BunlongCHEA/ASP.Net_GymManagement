@model Gym_ManagementSystem.Models.MemberViewModel;

@{
    ViewData["Title"] = "Delete Member";
}

<h2>Delete Member</h2>

<div>
    <h3>Are you sure you want to delete this Member?</h3>
    <div>
        <hr />
        <h4>@Model.MemberName</h4>
        <table class="table">
            <thead>
                <th>Member Name</th>
                <th>Member Contact</th>
                <th>Member Email</th>
                <th>Join Membership Date</th>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.MemberName</td>
                    <td>@Model.Contact</td>
                    <td>@Model.Email</td>
                    <td>@Model.JoinedMembershipDate</td>
                </tr>
            </tbody>
        </table>

        <form asp-action="DeleteConfirm" style="margin-top:10px">
            <input type="hidden" asp-for="Id">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>